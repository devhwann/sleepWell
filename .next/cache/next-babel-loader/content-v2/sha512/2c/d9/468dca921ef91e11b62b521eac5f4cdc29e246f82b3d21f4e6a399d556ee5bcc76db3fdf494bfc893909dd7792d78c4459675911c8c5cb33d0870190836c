{"ast":null,"code":"import { useEffect, useState } from 'react';\nimport { lightTheme, darkTheme } from '../styles/theme';\nexport var useDarkMode = function useDarkMode() {\n  var _useState = useState(lightTheme),\n      theme = _useState[0],\n      setTheme = _useState[1];\n\n  var setMode = function setMode(mode) {\n    mode === lightTheme ? window.localStorage.setItem('theme', 'light') : window.localStorage.setItem('theme', 'dark');\n    setTheme(mode);\n  };\n\n  var toggleTheme = function toggleTheme() {\n    theme === lightTheme ? setMode(darkTheme) : setMode(lightTheme);\n  };\n\n  useEffect(function () {\n    var localTheme = window.localStorage.getItem('theme');\n\n    if (localTheme !== null) {\n      if (localTheme === 'dark') {\n        setTheme(darkTheme);\n      } else {\n        setTheme(lightTheme);\n      }\n    }\n  }, []);\n  return {\n    theme: theme,\n    toggleTheme: toggleTheme\n  };\n};","map":null,"metadata":{},"sourceType":"module"}